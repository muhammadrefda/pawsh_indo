generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  first_name        String?
  last_name         String?
  user_type         UserType
  phone_number      String?
  is_phone_verified Boolean   @default(false)
  is_email_verified Boolean   @default(false)
  is_onboarded      Boolean   @default(false)
  profile_picture   String?
  is_suspend        Boolean   @default(false)
  latitude          Float?
  longitude         Float?
  address           String?
  city              String?
  state             String?
  description       String?
  platform          Platform?
  password          String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  groomer           Groomer?  @relation(fields: [], references: [])
  customer          Customer? @relation(fields: [], references: [])
}

model Groomer {
  User User[]
}

model Customer {
  User User[]
}

enum UserType {
  CUSTOMER
  GROOMER
}

enum Platform {
  IOS
  ANDROID
  OTHER
}
