generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  first_name        String?
  last_name         String?
  user_type         UserType
  phone_number      String?
  is_phone_verified Boolean   @default(false)
  is_email_verified Boolean   @default(false)
  is_onboarded      Boolean   @default(false)
  profile_picture   String?
  is_suspend        Boolean   @default(false)
  latitude          Float?
  longitude         Float?
  address           String?
  city              String?
  state             String?
  description       String?
  platform          Platform?
  password          String
  gcm_token         String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  groomerId         String?
  customerId        String?
  groomer           Groomer?  @relation(fields: [groomerId], references: [id], map: "User_groomer_fkey")
  customer          Customer? @relation(fields: [customerId], references: [id], map: "User_customer_fkey")
}

model Groomer {
  id                      String    @id @default(cuid())
  User                    User[]
  is_home_based           Boolean   @default(false)
  is_offer_pickup         Boolean   @default(false)
  is_house_call           Boolean   @default(false)
  is_mobile               Boolean   @default(false)
  avg_response_time       Int?
  min_years_of_experience Int?
  max_years_of_experience Int?
  epoch_last_logged_in    DateTime?
  is_active               Boolean   @default(true)
  tags                    String[]
  profile_video           String?
  wallet_amount           Float     @default(0)
}

model Customer {
  id         String   @id @default(cuid())
  User       User[]
  groom_area String[]
}

enum UserType {
  CUSTOMER
  GROOMER
}

enum Platform {
  IOS
  ANDROID
  OTHER
}
